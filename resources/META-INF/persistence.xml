<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/WEB-INF/persistence_1_0.xsd" version="1.0">
	<persistence-unit name="persistenceProjectDB" transaction-type="RESOURCE_LOCAL">
		<properties>
			<property name="hibernate.connection.driver_class" value="org.sqlite.JDBC" />
			<property name="hibernate.connection.url" value="jdbc:sqlite:D:/documentos/sqlite/database/database.db" />
			<property name="hibernate.dialect" value="br.com.vitafarma.util.SQLiteDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>
